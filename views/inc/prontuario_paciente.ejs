      <div class="container mt-2 mb-2">
        <button class="btn btn-danger">Deletar Porntuário</button>
        <!-- Button trigger modal -->
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal"> Criar Prontuário </button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                 <!-- //aqui entra o formulario -->
                    <form class="row g-3 needs-validation" action="/cadastrando_banco_paciente" method="post">
                      <div class="col-md-12">
                        <label for="validationCustom01" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="validationCustom01"  name="nome_pronturario" value="" required>
                      </div>
                      <div class="col-md-12">
                        <label for="validationCustom02" class="form-label">Data de nascimento</label>
                        <input type="text" class="form-control" id="validationCustom02" name="data_pronturario" value="" required>
                      
                      </div>
                      <div class="col-md-12">
                        <label for="validationCustomUsername" class="form-label">Sexo</label>
                          <select class="form-control" name="sexo_pronturario">
                            <option>Masculino</option>
                            <option>Feminino</option>
                            <option>Outros</option>
                          </select>
                      </div>
                      <div class="col-md-12">
                        <label for="validationCustom03" class="form-label">Endereço</label>
                        <input type="text" class="form-control" name="endereco_pronturario" id="validationCustom03" required>
                       
                      </div>
                      <div class="col-md-12">
                        <label for="validationCustom04" class="form-label">Telefone</label>
                        <input type="number" maxlength="11" name="telefone_pronturario" class="form-control" id="validationCustom04" required>
                      </div>
                      <div class="col-md-12">
                        <label for="validationCustom05" class="form-label">Contato de Emergência</label>
                        <input type="number" maxlength="11" class="form-control" name="contato_emergencia_pronturario" id="validationCustom05" required>
                      
                      </div>
                      <div class="col-12">
                        <button class="btn btn-success w-100" type="submit">Criar prontuário</button>
                      </div>
                    </form>
                    <!-- //final do formulario -->
                    <!-- logica de monstrar pronturario -->

                </div>
              </div>
            </div>
          </div>
      </div>
    


